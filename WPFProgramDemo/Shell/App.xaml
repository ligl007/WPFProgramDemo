<Application x:Class="WPFProgramDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MainThemes.xaml"/>
                <ResourceDictionary Source="Themes/BrushStyle.xaml"/>
                <ResourceDictionary Source="Themes/BorderStyle.xaml"/>
                <ResourceDictionary Source="Themes/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Themes/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Themes/WindowStyle.xaml"/>
                <ResourceDictionary Source="Themes/TreeViewStyle.xaml"/>
                <ResourceDictionary Source="Themes/DocumentsStyle.xaml"/>
                <ResourceDictionary Source="Themes/MenuStyle.xaml"/>
                <ResourceDictionary Source="Themes/TabControlStyle.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="Themes/ComboBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
